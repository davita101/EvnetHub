{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html",
      "status": 200
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/src/server.js": {
      "maxDuration": 60
    }
  }
}
